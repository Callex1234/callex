<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/css/masterph2.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- New Tags-->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="script/masterjsph2.js"></script>
    <script src="script/jquery-3.5.1.min.js"></script>
    <script src="script/main.js"></script>
    <!-- New Tags End -->
    <title>Callex - Audio Files</title>
</head>
<body style="background-color: #e1eaf7;">
    <div class="container-md mainbkgimp">
            
            <!-- Header Start -->
            <%- include('../layout/header') %>
            <!-- Header End -->
            
            <!-- Section One-->
            <div class="row g-4 d-flex justify-content-center" style="margin-bottom: 40px;">
                <div class="col-md-12">
                    <div class="cserveredtsec">
                      <button class="cpserveraddbtn" data-bs-toggle="modal" data-bs-target="#addroutemodal">+ Add Audio Files</button>&nbsp;&nbsp;&nbsp;

                      <!-- Add Server Password Pop-up -->
                      <div class="modal fade" id="addservermodal" tabindex="-1" aria-labelledby="addservermodalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content rounded-0">
                            <div class="modal-header">
                              <h1 class="modal-title fs-5 cmmpopuphdr" id="addservermodalLabel" style="font-size: 16px !important;">Add Process</h1>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <div class="row g-3">
                                <div class="col-md-12">
                                  <input type="password" placeholder="Enter Password" style="width: 100%;" class="cprcsrchinpt">
                                </div>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" data-bs-toggle="modal" data-bs-target="#edtserverspop" class="btn btn-primary cprcsaddprocessbtn">Login</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Add Process Pop-up End-->
                      
                      <input type="text" class="cprcsrchinpt" placeholder="Search Process" style="min-width: 192px;">
                      <button class="srchbtntopbar"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>
            </div>
            <!-- Section One End -->

            <!-- Section Two-->
            <div class="row g-4 d-flex justify-content-center" style="margin-bottom: 0px;">
              <div class="col-md-12">
                  <div class="cprcsectwo">
                    <table class="table cdshtblblackbody" style="padding-bottom: 0px;margin-bottom: 0px;">
                      <thead class="table-dark cdshtblblack">
                        <tr>
                          <th scope="col" style="padding-left: 10px;">File Name</th>
                          <th scope="col">File Size</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
              <% Audiofile.forEach(function(data){ %>
                        <tr>
                          <th scope="row" style="padding-left: 20px;padding-right: 20px;"><%=data.fileName %></th>
                          <td><%=data.filesize %> KB</td>
                          <!-- Action Column -->
                          <td class="d-flex">
                            <audio controls>
                              <source src="/<%=data.filePath %>" type="audio/mp3">
                              Audio not supported 
                          </audio>
                            <!-- <form  action="/admin/audio/download/<%= data._id %>" method="get"> -->
                            <a href="/<%=data.filePath %>" download="<%=data.uploadFile %>" style="
                              position: relative;
                              top: 15px;
                          ">
                              
                              <img src="/images/Download.svg" alt="" width="15px">
                            </a>

                            <!-- </form> -->
                            <form  action="/admin/audio/delete/<%= data._id %>" method="get" style="
                              position: relative;
                              top: 15px;
                          ">
                            <button class="cprcedtbtnico"><img src="/images/delete.svg" alt="" width="15px"></button>
                            </form>
                          </td>
                          <!-- Action Column End -->
                        </tr>
                        
                        <% }); %>
                      </tbody>
                    </table>

                    <!-- add Process Pop-Up -->
    <form method="POST" action="/admin/audio" enctype="multipart/form-data">
                    <div class="modal fade" id="addroutemodal" tabindex="-1" aria-labelledby="addroutemodalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content rounded-0">
                          <div class="modal-header">
                            <h1 class="modal-title fs-5 cmmpopuphdr" id="addroutemodalLabel" style="font-size: 16px !important;">Upload File</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <P>
                              
                              <!-- Form Starts Here -->

                              <!-- Row 1 -->
                              <div class="row g-3" style="margin-bottom: 20px;">
                                <div class="col-lg-12">
                                  <label class="adlrinptlbl" for="">File Name:</label>
                                  <input type="text" name="name" class="cprcsrchinpt" placeholder="Enter Here" style="width: 100%; max-height: 29.5px;">
                                </div>
                                <div class="col-lg-1">
                                  <input type="file" name="audiofile" class="crmaddbtn" accept=".mp3">
                                </div>
                                <div class="col-lg-12">
                                  <P class="crmfilenamepara" style="margin-left: -2px;">File Name Goes here</P>
                                </div>
                              </div>
                              <!--Row 1 End -->

                              <!-- Form Ends Here-->

                            </P>
                          </div>
                          <div class="modal-footer cprcedtpopftr">
                            <input type="submit" class="btn btn-primary cprcsaddprocessbtn" value="Upload">
                            <button type="button" class="btn btn-secondary cprcsaddprocessbtncls" data-bs-dismiss="modal">Close</button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- add Process Pop-Up End -->
</form>
                  </div>
              </div>
            </div>
            <!-- Section Two End -->

            <!-- Footer -->
            <%- include('../layout/footer') %>
            <!-- Footer End -->
    
    </div>

    

</body>
</html>