<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/css/masterph2.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- New Tags-->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/script/masterjsph2.js"></script>
    <script src="/script/jquery-3.5.1.min.js"></script>
    <script src="/script/main.js"></script>
    <!-- New Tags End -->
    <title>Callex - Scripts</title>
</head>
<body style="background-color: #e1eaf7;">
    <div class="container-md mainbkgimp">
            
            <!-- Header Start -->
            <%- include('../layout/header') %>
            <!-- Header End -->
            
            <!-- Section One-->
            <div class="row g-4 d-flex justify-content-center" style="margin-bottom: 40px;">
                <div class="col-md-12">
                    <div class="cserveredtsec">
                      <button class="cpserveraddbtn" data-bs-toggle="modal" data-bs-target="#addroutemodal">+ Add Script</button>&nbsp;&nbsp;&nbsp;

                      <!-- Edit Server Password Pop-up -->
                      <div class="modal fade" id="addservermodal" tabindex="-1" aria-labelledby="addservermodalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content rounded-0">
                            <div class="modal-header">
                              <h1 class="modal-title fs-5 cmmpopuphdr" id="addservermodalLabel" style="font-size: 16px !important;">Add Process</h1>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <div class="row g-3">
                                <div class="col-md-12">
                                  <input type="password" placeholder="Enter Password" style="width: 100%;" class="cprcsrchinpt">
                                </div>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" data-bs-toggle="modal" data-bs-target="#edtserverspop" class="btn btn-primary cprcsaddprocessbtn">Login</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Add Process Pop-up End-->
                      
                      <input type="text" class="cprcsrchinpt" placeholder="Search Process" style="min-width: 192px;">
                      <button class="srchbtntopbar"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>
            </div>
            <!-- Section One End -->


                                <!-- add Process Pop-Up -->

            <!-- Section Two-->
            <div class="row g-4 d-flex justify-content-center" style="margin-bottom: 0px;">
              <div class="col-md-12">
                  <div class="cprcsectwo">
                    <table class="table cdshtblblackbody" style="padding-bottom: 0px;margin-bottom: 0px;">
                      <thead class="table-dark cdshtblblack">
                        <tr>
                          <th scope="col" style="padding-left: 10px;">Script Name</th>
                          <th scope="col">Content</th>
                          <th scope="col">URL</th>
                          <th scope="col">Active</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
              <% Scripts.forEach(function(data,index){ %>
                        <tr>
                          <th scope="row" style="padding-left: 20px;padding-right: 20px;"><%=data.scriptName %></th>
                       <td><%=data.text %></td>
                          <td><%=data.isUrl %></td>
                          <td><%=data.isActive %><img src="/images/Active.svg" alt="" width="15px"></td>
                          <!-- Action Column -->
                          <td>
                            <button type="button" class="cprcedtbtnico" data-bs-toggle="modal" data-bs-target="#updateroutemodal<%= index %>">
                              <img src="/images/Edit1.svg" alt="" width="15px">
                            </button>
                            <form  action="/admin/script/delete/<%= data._id %>" method="get">
                    
                              <button class="cprcedtbtnico"><img src="/images/delete.svg" alt="" width="15px"></button>
                              </form>
                          </td>
                          <!-- Action Column End -->
                        </tr>
                        <form method="POST" action="/admin/script/<%= data._id %>">

                          <div class="modal fade" id="updateroutemodal<%= index %>" tabindex="-1" aria-labelledby="updateroutemodal" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content rounded-0">
                                <div class="modal-header">
                                  <h1 class="modal-title fs-5 cmmpopuphdr" id="updateroutemodal<%= index %>" style="font-size: 16px !important;">Modify Route</h1>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                  <P>
                                    <!-- Form Starts Here -->
                                    <!-- Row 1.1 -->
                              <input type="hidden" name="id" value="<%= data._id %>">
                                    <div class="row g-3" style="margin-bottom: 20px;">
                                      <div class="col-lg-6" style="margin-bottom: 30px;">
                                        <input name="script" type="text" class="cprcsrchinpt" value="<%= data.scriptName %>" placeholder="Script Name" style="width: 100%;">
                                      </div>
                                      <div class="col-lg-6">
                                        <div style="display: flex;margin-top: 3px;">
                                          <P class="cprcsactvpara" style="margin-top: 3px;">Is Active?:</P>
                                          <div class="cl-toggle-switch">
                                            <select name="active" class="form-select nwslctmenu" >
                                              <option <%= data.isActive==true? 'selected' :''  %>  value="true">
                                                  YES
                                              </option>
                                              <option value="false" <%= data.isActive==false? 'selected' :''  %> >
                                                No
                                            </option>
                                            </select>
                                           
                                        </div>
                                        </div>
                                      </div>
                                      <div class="col-lg-12">
                                        <div style="display: flex;margin-top: 3px;">
                                          <P class="cprcsactvpara" style="margin-top: 3px;">URL:</P>
                                          <div class="cl-toggle-switch">
                                            <select name="url" class="form-select nwslctmenu" >
                                              <option <%= data.isUrl==true? 'selected' :''  %>  value="true">
                                                  YES
                                              </option>
                                              <option value="false" <%= data.isUrl==false? 'selected' :''  %> >
                                                No
                                            </option>
                                            </select>
                                          </div> 
                                          <P class="cprcsactvpara" style="margin-top: 3px;">Text Content:</P>
                                        </div>
                                      </div>
                                      
                                     
                                      <div class="col-lg-12">
                                        <textarea name="textcontent"  class="cprcsrchinpt" name="" id="" rows="3" style="width: 100%;"><%= data.text %></textarea>
                                      </div>
                                    </div>
                                    <!--Row 1 End -->
      
                                    <!-- Form Ends Here-->
                                  </P>
                                </div>
                                <div class="modal-footer cprcedtpopftr">
                                  <input type="submit" class="btn btn-primary cprcsaddprocessbtn" value="Modify">
                                  <button type="button" class="btn btn-secondary cprcsaddprocessbtncls" data-bs-dismiss="modal">Close</button>
                                </div>
                              </div>
                            </div>
                          </div>
                          <!-- Edit Process Pop-Up End -->
                        </form>
      
                        <% }); %>
                      </tbody>
                    </table>




                    
                    <!-- add Process Pop-Up -->
<form method="POST" action="/admin/script">

                    <div class="modal fade" id="addroutemodal" tabindex="-1" aria-labelledby="addroutemodalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content rounded-0">
                          <div class="modal-header">
                            <h1 class="modal-title fs-5 cmmpopuphdr" id="addroutemodalLabel" style="font-size: 16px !important;">Add/Modify Route</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <P>
                              <!-- Form Starts Here -->
                              <!-- Row 1.1 -->
                              <div class="row g-3" style="margin-bottom: 20px;">
                                <div class="col-lg-6" style="margin-bottom: 30px;">
                                  <input name="script" type="text" class="cprcsrchinpt" placeholder="Script Name" style="width: 100%;" required>
                                </div>
                                <div class="col-lg-6">
                                  <div style="display: flex;margin-top: 3px;">
                                    <P class="cprcsactvpara" style="margin-top: 3px;">Is Active?:</P>
                                    <div class="cl-toggle-switch">
                                      <select name="active" class="form-select nwslctmenu" required>
                                        <option value="true">
                                            YES
                                        </option>
                                        <option value="false">
                                          No
                                      </option>
                                      </select>
                                     
                                  </div>
                                  </div>
                                </div>
                                <div class="col-lg-12">
                                  <div style="display: flex;margin-top: 3px;">
                                    <P class="cprcsactvpara" style="margin-top: 3px;">URL:</P>
                                    <div class="cl-toggle-switch">
                                      <label class="cl-switch">
                                        <input name="url" type="checkbox" value="true" required>
                                        <span></span>
                                      </label>
                                    </div> 
                                    <P class="cprcsactvpara" style="margin-top: 3px;">Text Content:</P>
                                  </div>
                                </div>
                                
                               
                                <div class="col-lg-12">
                                  <textarea name="textcontent" placeholder="textcontent" class="cprcsrchinpt" name="" id="" rows="3" style="width: 100%;" required></textarea>
                                </div>
                              </div>
                              <!--Row 1 End -->

                              <!-- Form Ends Here-->
                            </P>
                          </div>
                          <div class="modal-footer cprcedtpopftr">
                            <input type="submit" class="btn btn-primary cprcsaddprocessbtn" value="Add">
                            <button type="button" class="btn btn-secondary cprcsaddprocessbtncls" data-bs-dismiss="modal">Close</button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Edit Process Pop-Up End -->
                  </form>

                  </div>
              </div>
            </div>
            <!-- Section Two End -->

            <!-- Footer -->
            <%- include('../layout/footer') %>
            <!-- Footer End -->
    
    </div>



</body>
</html>