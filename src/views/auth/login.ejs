<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/00961ee738.js"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="/script/jquery-3.5.1.min.js"></script>
    <title>Callex Login</title>
  </head>
  <body class="main-container">
    <div class="login-container">
      <div class="login-image-container">
        <img src="/images/Collex-1.2.png" alt="" class="login-logo" />
      </div>
      <div class="login-text-container">
        <div class="login-title"><hr class="login-hr" /></div>
        <div class="login-title"><h1 id="changeLoginHeading">Login As</h1></div>
        <div class="login-title"><hr class="login-hr" /></div>
      </div>

      <!-- Login Selection Area -->

      <div class="login-selection-container" id="loginSelectorContainer">
        <div class="login-icon-container">
          <img
            src="/images/Agent.png"
            alt=""
            class="login-icon"
            id="agentSelectorImage"
          />
          <p class="login-text">Agent</p>
        </div>
        <div class="login-icon-container">
          <img
            src="/images/Administrator.png"
            alt=""
            class="login-icon"
            id="adminSelectorImage"
          />
          <p class="login-text">Admin</p>
        </div>
        <div class="login-icon-container">
          <img
            src="/images/Supervisor.png"
            alt=""
            class="login-icon"
            id="supSelectorImage"
          />
          <p class="login-text">Supervisor</p>
        </div>
        <div class="login-icon-container">
          <img
            src="/images/Mis.png"
            alt=""
            class="login-icon"
            id="misSelectorImage"
          />
          <p class="login-text">MIS</p>
        </div>
      </div>

      <!-- Admin Login Area -->

      <div class="admin-login-container" id="adminLoginContainer">
        <div class="inner-login-icon">
          <img
            src="/images/Administrator.png"
            alt=""
            class="admin-login-icon"
          />
        </div>
        <div class="admin-login-input-container">
          <form action="/admin/login" method="post">
            <input
              type="text"
              class="admin-username"
              placeholder="Enter Username"
              name="username"
            />
            <input
              type="password"
              name="password"
              class="admin-password"
              placeholder="Enter Password"
            />
            <button class="admin-login-button">Sign in</button>
          </form>
          <button class="back-button"><i class="fas fa-arrow-left"></i></button>
        </div>
      </div>

      <!-- Agent Login Area -->

      <div class="agent-login-container" id="agentLoginContainer">
        <div class="inner-login-icon">
          <img src="images/Agent.png" alt="" class="agent-login-icon" />
        </div>
        <div class="agent-login-input-container">
          <input
            type="text"
            class="admin-username"
            placeholder="Enter Username"
          />
          <input
            type="password"
            class="admin-password"
            placeholder="Enter Password"
          />
          <input
            type="text"
            class="admin-username"
            placeholder="Enter Station"
          />
          <button class="agent-login-button">Sign in</button>
          <button class="back-button"><i class="fas fa-arrow-left"></i></button>
        </div>
      </div>

      <!-- Supervisor Login Area -->

      <div class="sup-login-container" id="supLoginContainer">
        <div class="inner-login-icon">
          <img src="/images/Supervisor.png" alt="" class="sup-login-icon" />
        </div>
        <div class="sup-login-input-container">
          <input
            type="text"
            class="admin-username"
            placeholder="Enter Username"
          />
          <input
            type="password"
            class="admin-password"
            placeholder="Enter Password"
          />
          <button class="sup-login-button">Sign in</button>
          <button class="back-button"><i class="fas fa-arrow-left"></i></button>
        </div>
      </div>

      <!-- MIS Login Area -->

      <div class="mis-login-container" id="misLoginContainer">
        <div class="inner-login-icon">
          <img src="/images/Mis.png" alt="" class="mis-login-icon" />
        </div>
        <div class="mis-login-input-container">
          <input
            type="text"
            class="admin-username"
            placeholder="Enter Username"
          />
          <input
            type="password"
            class="admin-password"
            placeholder="Enter Password"
          />
          <button class="mis-login-button">Sign in</button>
          <button class="back-button"><i class="fas fa-arrow-left"></i></button>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/script/main.js"></script>
  </body>
</html>
